---
import Section from "@/components/Section.astro";
import ProjectCard from "@/components/items/ProjectCard.astro";
import cvData from '../../../cv.json';

const { projects = [], publications = [] } = cvData;
const allProjects = [...projects, ...publications.map(pub => ({
  name: pub.name,
  description: pub.summary,
  url: pub.url,
  highlights: pub.summary ? [pub.summary] : []
}))].sort((a, b) => new Date(b.startDate) - new Date(a.startDate));
---

<Section title="Proyectos">
  {allProjects.length > 0 ? (
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {allProjects.map((project, index) => (
        <ProjectCard project={project} />
      ))}
    </div>
  ) : (
    <p class="text-gray-400">No projects information available.</p>
  )}
  
  {/* References */}
  {cvData.references && cvData.references.length > 0 && (
    <div class="mt-12">
      <h2 class="text-2xl font-bold text-white mb-6">References</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {cvData.references.map((ref, index) => (
          <div key={index} class="bg-gray-800/50 rounded-lg p-6">
            <h4 class="text-lg font-semibold text-white mb-2">{ref.name}</h4>
            <p class="text-gray-300">"{ref.reference}"</p>
          </div>
        ))}
      </div>
    </div>
  )}
</Section>