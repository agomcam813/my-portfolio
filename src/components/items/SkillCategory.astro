---
const { category } = Astro.props;
const { name, skills = [] } = category;
---

<div class="mb-6">
  <h3 class="text-xl font-semibold text-white mb-3">{name}</h3>
  <div class="flex flex-wrap gap-2">
    {skills.map((skill, index) => (
      <span 
        key={index}
        class="px-3 py-1 bg-gray-800 text-gray-200 rounded-full text-sm hover:bg-accent/30 transition-colors"
      >
        {skill}
      </span>
    ))}
  </div>
</div>
